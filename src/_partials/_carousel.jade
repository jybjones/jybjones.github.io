#featured.carousel.slide(data-ride='carousel')
        ol.carousel-indicators
        .carousel-inner.fullheight
          .item
            img(src='assets/img/leaning.jpg', alt='Vacation')
          .item
            img(src='assets/img/ponies.jpg', alt='Ponies')
          .item
            img(src='assets/img/sparkle.jpg', alt='Sparkle')
        // carousel-inner
        a.left.carousel-control(href='#featured', role='button', data-slide='prev')
          span.glyphicon.glyphicon-chevron-left
        a.right.carousel-control(href='#featured', role='button', data-slide='next')
          span.glyphicon.glyphicon-chevron-right
      // featured carousel
