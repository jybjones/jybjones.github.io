#featured.carousel.slide(data-ride='carousel')
        ol.carousel-indicators
        .carousel-inner.fullheight
          .item
            img(src='assets/img/leaning.jpg', alt='Vacation')
            .absolute-div
              .carousel-caption
                h1 HELLO WORLD!
          .item
            img(src='assets/img/ponies.jpg', alt='Ponies')
            .absolute-div
              .carousel-caption
                h1 jybjones.com is under construction
          .item
            img(src='assets/img/sparkle.jpg', alt='Sparkle')
            .absolute-div
              .carousel-caption
                h1 Please Feel Free to Peruse...
